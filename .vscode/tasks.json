{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet build",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test",
            "command": "dotnet test",
            "type": "shell",
            "group": "test",
            "presentation": {
                "showReuseMessage": false
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "hypar publish",
            "type": "shell",
            "group": "build",
            "presentation": {
                "showReuseMessage": false,
                "focus": true,
            },
            "problemMatcher": "$msCompile"
        }
    ]
}